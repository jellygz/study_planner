<body>

    <div class="content">
  
      <h1>Welcome</h1>
      <h2>Your Tasks</h2>
  
      <!-- Form to Add a New Task -->
      <form action="/tasks/add" method="POST">
        <input type="text" name="title" placeholder="Task Title" required>
        <input type="date" name="due_date" required>
        <textarea name="description" placeholder="Task Description"></textarea>
        <button type="submit">Add Task</button>
      </form>
  
      <!-- List of Tasks -->
      <ul>
        <% if (tasks && tasks.length > 0) { %>
          <% tasks.forEach(task => { %>
            <li id="task-<%= task.id %>">
              <strong><%= task.title %></strong> – Due: <%= new Date(task.due_date).toLocaleDateString() %>
              <p><%= task.description %></p>
  
              <!-- Delete Task Button -->
              <form action="/tasks/delete/<%= task.id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this task?');">
                  🗑️ Delete
                </button>
              </form>
            </li>
          <% }); %>
        <% } else { %>
          <li>No tasks found. Add some tasks!</li>
        <% } %>
      </ul>
  
      <!-- Logout Link -->
      <a href="/auth/logout">Logout</a>
  
    </div>
  
  </body>
  